<?import javafx.collections.FXCollections?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="Infinity" maxWidth="Infinity" AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" styleClass="pane"
            stylesheets="@Main.css" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="ReportsController"
>
            <center>
                <TabPane maxHeight="Infinity" maxWidth="Infinity" AnchorPane.bottomAnchor="0.0"
                         AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
                         fx:id="reportTabPane" styleClass="pane" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab closable="false" text="Report Type">
                            <content>

                                <FlowPane maxHeight="Infinity" maxWidth="Infinity" AnchorPane.bottomAnchor="0.0"
                                          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                          AnchorPane.topAnchor="0.0" styleClass="pane"

                                >
                                            <children>
                                                <HBox styleClass="HBox">
                                                    <children>
                                                        <Label alignment="CENTER" text="Report Type"
                                                               textAlignment="CENTER" HBox.hgrow="ALWAYS">
                                                            <opaqueInsets>
                                                                <Insets/>
                                                            </opaqueInsets>
                                                            <HBox.margin>
                                                                <Insets right="5.0"/>
                                                            </HBox.margin>
                                                        </Label>
                                                        <ComboBox fx:id="cmbxReportType" onAction="#reportTypeChange"
                                                                  promptText="Choose A Report Type">
                                                            <items>
                                                                <FXCollections fx:factory="observableArrayList">
                                                                    <String fx:value="Year Totals"/>
                                                                    <String fx:value="Year Totals; Spilt by Customer"/>
                                                                    <String fx:value="Customer Year Totals"/>
                                                                    <String fx:value="Customer All-Time Totals"/>
                                                                </FXCollections>
                                                            </items>
                                                        </ComboBox>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </FlowPane>

                            </content>
                        </Tab>
                        <Tab closable="false" text="Report Info">
                            <content>

                                <FlowPane maxHeight="Infinity" maxWidth="Infinity" AnchorPane.bottomAnchor="0.0"
                                          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                          AnchorPane.topAnchor="0.0" styleClass="pane"

                                >
                                            <children>
                                                <HBox styleClass="HBox">
                                                    <children>
                                                        <Label alignment="CENTER" text="Scout Name"
                                                               textAlignment="CENTER" HBox.hgrow="ALWAYS">
                                                            <opaqueInsets>
                                                                <Insets/>
                                                            </opaqueInsets>
                                                            <HBox.margin>
                                                                <Insets right="5.0"/>
                                                            </HBox.margin>
                                                        </Label>
                                                        <TextField fx:id="scoutName" promptText="Scout Name"/>
                                                    </children>
                                                </HBox>
                                                <HBox styleClass="HBox">
                                                    <children>
                                                        <Label alignment="CENTER"
                                                               text="Scout Street Address" textAlignment="CENTER"
                                                               HBox.hgrow="ALWAYS">
                                                            <opaqueInsets>
                                                                <Insets/>
                                                            </opaqueInsets>
                                                            <HBox.margin>
                                                                <Insets right="5.0"/>
                                                            </HBox.margin>
                                                        </Label>
                                                        <TextField fx:id="scoutStAddr" promptText="Street Address"/>
                                                    </children>
                                                </HBox>
                                                <HBox styleClass="HBox">
                                                    <children>
                                                        <Label alignment="CENTER"
                                                               text="Scout Zip Code" textAlignment="CENTER"
                                                               HBox.hgrow="ALWAYS">
                                                            <opaqueInsets>
                                                                <Insets/>
                                                            </opaqueInsets>
                                                            <HBox.margin>
                                                                <Insets right="5.0"/>
                                                            </HBox.margin>
                                                        </Label>
                                                        <TextField fx:id="scoutZip" promptText="Scout Zip Code"/>
                                                    </children>
                                                </HBox>
                                                <HBox styleClass="HBox">
                                                    <children>
                                                        <Label alignment="CENTER" text="Scout Town"
                                                               textAlignment="CENTER" HBox.hgrow="ALWAYS">
                                                            <opaqueInsets>
                                                                <Insets/>
                                                            </opaqueInsets>
                                                            <HBox.margin>
                                                                <Insets right="5.0"/>
                                                            </HBox.margin>
                                                        </Label>
                                                        <TextField fx:id="scoutTown" promptText="Scout Town"/>
                                                    </children>
                                                </HBox>
                                                <HBox styleClass="HBox">
                                                    <children>
                                                        <Label alignment="CENTER" text="Scout State"
                                                               textAlignment="CENTER" HBox.hgrow="ALWAYS">
                                                            <opaqueInsets>
                                                                <Insets/>
                                                            </opaqueInsets>
                                                            <HBox.margin>
                                                                <Insets right="5.0"/>
                                                            </HBox.margin>
                                                        </Label>
                                                        <TextField fx:id="scoutState" promptText="Scout State"/>
                                                    </children>
                                                </HBox>
                                                <HBox styleClass="HBox">
                                                    <children>
                                                        <Label alignment="CENTER" text="Scout Phone"
                                                               textAlignment="CENTER" HBox.hgrow="ALWAYS">
                                                            <opaqueInsets>
                                                                <Insets/>
                                                            </opaqueInsets>
                                                            <HBox.margin>
                                                                <Insets right="5.0"/>
                                                            </HBox.margin>
                                                        </Label>
                                                        <TextField fx:id="scoutPhone" promptText="Scout Phone"/>
                                                    </children>
                                                </HBox>
                                                <HBox styleClass="HBox">
                                                    <children>
                                                        <Label alignment="CENTER" text="Scout Rank"
                                                               textAlignment="CENTER" HBox.hgrow="ALWAYS">
                                                            <opaqueInsets>
                                                                <Insets/>
                                                            </opaqueInsets>
                                                            <HBox.margin>
                                                                <Insets right="5.0"/>
                                                            </HBox.margin>
                                                        </Label>
                                                        <TextField fx:id="scoutRank" promptText="Scout Rank"/>
                                                    </children>
                                                </HBox>
                                                <HBox styleClass="HBox">
                                                    <children>
                                                        <Label alignment="CENTER"
                                                               text="Logo Location:" textAlignment="CENTER"
                                                               HBox.hgrow="ALWAYS">
                                                            <opaqueInsets>
                                                                <Insets/>
                                                            </opaqueInsets>
                                                            <HBox.margin>
                                                                <Insets right="5.0"/>
                                                            </HBox.margin>
                                                        </Label>
                                                        <TextField fx:id="logoLoc" promptText="Logo Location"/>
                                                        <Button mnemonicParsing="false" onAction="#promptLogo"
                                                                text="..."/>
                                                    </children>
                                                </HBox>
                                                <HBox styleClass="HBox">
                                                    <children>
                                                        <Label alignment="CENTER"
                                                               text="PDF Save Location:" textAlignment="CENTER"
                                                               HBox.hgrow="ALWAYS">
                                                            <opaqueInsets>
                                                                <Insets/>
                                                            </opaqueInsets>
                                                            <HBox.margin>
                                                                <Insets right="5.0"/>
                                                            </HBox.margin>
                                                        </Label>
                                                        <TextField fx:id="pdfLoc" promptText="PDF Save Location"/>
                                                        <Button mnemonicParsing="false" onAction="#promptPDF"
                                                                text="..."/>
                                                    </children>
                                                </HBox>
                                                <HBox fx:id="yearPane" styleClass="HBox">
                                                    <children>
                                                        <Label alignment="CENTER" text="Year"
                                                               textAlignment="CENTER">
                                                            <opaqueInsets>
                                                                <Insets/>
                                                            </opaqueInsets>
                                                        </Label>
                                                        <ComboBox fx:id="cmbxYears" onAction="#selectedYearChanged"
                                                                  promptText="Choose A Year">
                                                            <items>
                                                                <FXCollections fx:factory="observableArrayList">
                                                                </FXCollections>
                                                            </items>
                                                        </ComboBox>
                                                    </children>
                                                </HBox>
                                                <HBox fx:id="userPanel" styleClass="HBox">
                                                    <children>
                                                        <Label alignment="CENTER" text="User"
                                                               textAlignment="CENTER">
                                                            <opaqueInsets>
                                                                <Insets/>
                                                            </opaqueInsets>
                                                        </Label>
                                                        <ComboBox fx:id="cmbxUser" onAction="#selectedUserChanged"
                                                                  promptText="">
                                                            <items>
                                                                <FXCollections fx:factory="observableArrayList">
                                                                </FXCollections>
                                                            </items>
                                                        </ComboBox>
                                                    </children>
                                                </HBox>
                                                <HBox fx:id="customerPane" styleClass="HBox">
                                                    <children>
                                                        <Label alignment="CENTER" text="Customer"
                                                               textAlignment="CENTER" HBox.hgrow="ALWAYS">
                                                            <opaqueInsets>
                                                                <Insets/>
                                                            </opaqueInsets>
                                                            <HBox.margin>
                                                                <Insets right="5.0"/>
                                                            </HBox.margin>
                                                        </Label>
                                                        <ComboBox fx:id="cmbxCustomers"
                                                                  promptText="Choose A Customer">

                                                        </ComboBox>
                                                    </children>
                                                    <FlowPane.margin>
                                                        <Insets right="5.0"/>
                                                    </FlowPane.margin>
                                                </HBox>
                                                <HBox fx:id="categoryPane" styleClass="HBox">
                                                    <children>
                                                        <Label alignment="CENTER" text="Category"
                                                               textAlignment="CENTER" HBox.hgrow="ALWAYS">
                                                            <opaqueInsets>
                                                                <Insets/>
                                                            </opaqueInsets>
                                                            <HBox.margin>
                                                                <Insets right="5.0"/>
                                                            </HBox.margin>
                                                        </Label>
                                                        <ComboBox fx:id="cmbxCategory"
                                                                  onAction="#selectedCategoryChanged"
                                                                  promptText="Choose A Category">
                                                            <items>
                                                                <FXCollections fx:factory="observableArrayList">
                                                                    <String fx:value="All"/>

                                                                </FXCollections>
                                                            </items>
                                                            <value>
                                                                <String fx:value="All"/>
                                                            </value>
                                                        </ComboBox>
                                                    </children>
                                                    <FlowPane.margin>
                                                        <Insets right="5.0"/>
                                                    </FlowPane.margin>
                                                </HBox>
                                                <CheckBox fx:id="includeHeader" disable="true" mnemonicParsing="false"
                                                          text="Include Due Header">
                                                    <HBox.margin>
                                                        <Insets right="5.0"/>
                                                    </HBox.margin>
                                                </CheckBox>
                                            </children>
                                        </FlowPane>

                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </center>
            <bottom>
                <ButtonBar BorderPane.alignment="CENTER">
                    <buttons>
                        <Button fx:id="nextButton" mnemonicParsing="false" onAction="#next" text="Next"/>
                        <Button fx:id="okButton" disable="true" mnemonicParsing="false" onAction="#submit" text="OK"/>
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancel" text="Cancel"/>
                    </buttons>
                </ButtonBar>
            </bottom>
        </BorderPane>

