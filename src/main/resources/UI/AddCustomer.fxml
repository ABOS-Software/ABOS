<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" styleClass="pane" stylesheets="@Main.css" AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
            xmlns="http://javafx.com/javafx/8.0.121" fx:controller="AddCustomerController">
            <top>
                <FlowPane maxHeight="Infinity" maxWidth="Infinity" styleClass="pane" AnchorPane.bottomAnchor="0.0"
                          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
                          BorderPane.alignment="CENTER">
                    <children>
                        <HBox styleClass="HBox">
                            <children>
                                <Label alignment="CENTER" text="Customer Name" textAlignment="CENTER"
                                       HBox.hgrow="ALWAYS">
                                    <opaqueInsets>
                                        <Insets/>
                                    </opaqueInsets>
                                    <HBox.margin>
                                        <Insets right="5.0"/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="Name" promptText="Customer Name"/>
                            </children>
                        </HBox>
                        <HBox styleClass="HBox">
                            <children>
                                <Label alignment="CENTER" text="Street Address" textAlignment="CENTER"
                                       HBox.hgrow="ALWAYS">
                                    <opaqueInsets>
                                        <Insets/>
                                    </opaqueInsets>
                                    <HBox.margin>
                                        <Insets right="5.0"/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="Address" promptText="Street Address"/>
                            </children>
                        </HBox>
                        <HBox styleClass="HBox">
                            <children>
                                <Label alignment="CENTER" text="Zip Code" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                                    <opaqueInsets>
                                        <Insets/>
                                    </opaqueInsets>
                                    <HBox.margin>
                                        <Insets right="5.0"/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="ZipCode" promptText="Zip Code"/>
                            </children>
                        </HBox>
                        <HBox styleClass="HBox">
                            <children>
                                <Label alignment="CENTER" text="Town" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                                    <opaqueInsets>
                                        <Insets/>
                                    </opaqueInsets>
                                    <HBox.margin>
                                        <Insets right="5.0"/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="Town" promptText="Town"/>
                            </children>
                        </HBox>
                        <HBox styleClass="HBox">
                            <children>
                                <Label alignment="CENTER" text="State" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                                    <opaqueInsets>
                                        <Insets/>
                                    </opaqueInsets>
                                    <HBox.margin>
                                        <Insets right="5.0"/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="State" promptText="State"/>
                            </children>
                        </HBox>
                        <HBox styleClass="HBox">
                            <children>
                                <Label alignment="CENTER" text="Phone" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                                    <opaqueInsets>
                                        <Insets/>
                                    </opaqueInsets>
                                    <HBox.margin>
                                        <Insets right="5.0"/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="Phone" promptText="Phone"/>
                            </children>
                        </HBox>
                        <HBox styleClass="HBox">
                            <children>
                                <Label alignment="CENTER" text="Email" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                                    <opaqueInsets>
                                        <Insets/>
                                    </opaqueInsets>
                                    <HBox.margin>
                                        <Insets right="5.0"/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="Email" promptText="Email"/>
                            </children>
                        </HBox>
                        <HBox styleClass="HBox">
                            <children>
                                <Label alignment="CENTER" text="Donations" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                                    <opaqueInsets>
                                        <Insets/>
                                    </opaqueInsets>
                                    <HBox.margin>
                                        <Insets right="5.0"/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="DonationsT" promptText="Donations"/>
                            </children>
                        </HBox>
                        <HBox styleClass="HBox">
                            <children>
                                <CheckBox fx:id="Delivered" mnemonicParsing="false" text="Delivered">
                                    <HBox.margin>
                                        <Insets right="5.0"/>
                                    </HBox.margin>
                                </CheckBox>
                                <CheckBox fx:id="Paid" mnemonicParsing="false" text="Paid"/>
                            </children>
                        </HBox>
                        <HBox layoutX="1138.0" layoutY="36.0">
                            <children>
                                <Label alignment="CENTER" text="User to add as:" textAlignment="CENTER"/>
                                <ComboBox fx:id="userCmbx"/>
                            </children>
                        </HBox>
                    </children>
                </FlowPane>
            </top>
            <center>
                <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="pane" AnchorPane.bottomAnchor="0.0"
                            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
                            BorderPane.alignment="CENTER">
                    <content>
                        <TableView prefHeight="1" prefWidth="1" fx:id="ProductTable" editable="true">
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>

                    </content>
                </ScrollPane>
            </center>
            <bottom>
                <ButtonBar BorderPane.alignment="CENTER">
                    <buttons>
                        <Button fx:id="okButton" defaultButton="true" mnemonicParsing="false" onAction="#submit"
                                text="OK"/>
                        <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" onAction="#cancel"
                                text="Cancel"/>
                    </buttons>
                </ButtonBar>
            </bottom>
        </BorderPane>
